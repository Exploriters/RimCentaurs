  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_CentaurPants</defName>
    <label>centaur pants</label>
    <tradeability>Sellable</tradeability>
    <description>A pair of pants suited for an equine body. Now we know how a horse would wear pants.</description>
    <!--<generateCommonality>0.0</generateCommonality>-->
    <!-- <commonality>0</commonality> -->
    <recipeMaker>
	  <researchPrerequisites>
		<li>ComplexClothing</li>
		<li>CentaurReverseEngineeringHumanTech</li>
	  </researchPrerequisites>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/CentaurPants/CentaurPants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories Inherit="False">
      <li>CentaurApparels</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>3000</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>CentaurLegs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>CentaurIndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>CentaurOutfit</li>
        <li>CentaurOutfit</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <ThingDef ParentName="ArmorSmithableBase">
    <defName>Apparel_CentaurHorseshoesSet</defName>
    <label>centaur mitten set</label>
    <tradeability>Sellable</tradeability>
    <description>A set of horseshoes and mittens for a centaur to protect their hooves and hands, also gives them a minor moving speed boost.</description>
    <!--<generateCommonality>0.0</generateCommonality>-->
    <!-- <commonality>0</commonality> -->
    <recipeMaker>
      <unfinishedThingDef Inherit="False"/>
	  <researchPrerequisites>
		<li>Smithing</li>
		<li>CentaurReverseEngineeringHumanTech</li>
	  </researchPrerequisites>
      <recipeUsers Inherit="False">
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <disallowedThingDefs Inherit="False" />
      </defaultIngredientFilter>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/CentaurPants/CentaurHorseshoesSet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>1</costStuffCount>
    <stuffCategories>
	  <li>Woody</li>
      <li>Metallic</li>
      <li>Fabric</li>
      <li>Leathery</li>
      <!-- <li>Stony</li> -->
    </stuffCategories>
    <thingCategories Inherit="False">
      <li>CentaurApparels</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>400</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>1.0</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>CentaurHooves</li>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>CentaurIndustrialBasic</li>
        <li>CentaurRetroStart</li>
      </tags>
      <defaultOutfitTags>
        <li>Centaur</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
