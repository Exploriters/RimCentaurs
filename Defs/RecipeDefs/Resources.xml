<Defs>

  <RecipeDef>
    <defName>Make_Orangice</defName>
    <label>make orangice</label>
    <description>Make orangice by deassemble thermo damper. Needs excess thermo damper to do.</description>
    <jobString>Making orangice.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>200000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
	<productHasIngredientStuff>true</productHasIngredientStuff>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ThermoDamper</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Hyperweave</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
        <li>ThermoDamper</li>
        <li>Uranium</li>
        <li>Hyperweave</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Orangice>400</Orangice>
      <ThermoDamper>2</ThermoDamper>
    </products>
    <researchPrerequisite>AdvancedFabrication</researchPrerequisite>
    <skillRequirements>
      <Crafting>20</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers Inherit="False">
      <li>FabricationBench</li>
    </recipeUsers>
  </RecipeDef>

