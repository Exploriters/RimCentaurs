    <label>linguisticsuppressor</label>
    <labelNoun>a linguisticsuppressor</labelNoun>
    <defaultLabelColor>(0.4, 0.75, 1)</defaultLabelColor>
    <stages>
      <li>
        <painFactor>0.15</painFactor>
        <painOffset>-0.05</painOffset>
		<partEfficiencyOffset>1.05</partEfficiencyOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.05</postFactor>
