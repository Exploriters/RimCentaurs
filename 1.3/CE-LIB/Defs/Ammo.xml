  <RecipeDef ParentName="AmmoRecipeNeolithicBase">
    <defName>MakeAmmo_CentaurSlingLine_Stone</defName>
    <label>make slingline stone x10</label>
    <description>Make 10 slingline stones.</description>
    <jobString>Making slingline stones.</jobString>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <Ammo_CentaurSlingLine_Stone>10</Ammo_CentaurSlingLine_Stone>
